generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER // Free tier
  PRO // Paid tier
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  role          String    @default("USER") // USER | PRO
  isPro         Boolean   @default(false)

  // Quota tracking
  emailQuota   Int       @default(10)
  emailsUsed   Int       @default(0)
  quotaResetAt DateTime?

  // PRO plan
  proExpiresAt  DateTime?

  // Stripe integration
  stripeCustomerId      String?
  stripeSubscriptionId  String?
  stripePriceId         String?
  stripeCurrentPeriodEnd DateTime?

  accounts    Account[]
  sessions    Session[]
  bookmarks   Bookmark[]
  ratings     ProfessorRating[]
  savedEmails SavedEmail[]
  usageLogs   UsageLog[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([stripeCustomerId])
  @@index([stripeSubscriptionId])
}

model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.String
  access_token      String? @db.String
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.String
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Professor {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  name              String
  email             String   @unique
  university        String
  department        String
  major             String
  location          String
  bio               String?
  imageUrl          String?
  researchInterests String[]
  googleScholarUrl  String?
  publicationUrl    String?

  // ✅ NEW: PRO exclusive flag
  isPro Boolean @default(false)

  bookmarks   Bookmark[]
  savedEmails SavedEmail[]
  ratings     ProfessorRating[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([name])
  @@index([university])
  @@index([major])
  @@index([isPro])
}

model Bookmark {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String   @db.ObjectId
  professorId String   @db.ObjectId
  createdAt   DateTime @default(now())

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  professor Professor @relation(fields: [professorId], references: [id], onDelete: Cascade)

  @@unique([userId, professorId])
  @@index([userId])
}

model SavedEmail {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String   @db.ObjectId
  professorId String   @db.ObjectId
  subject     String
  content     String
  language    String
  createdAt   DateTime @default(now())

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  professor Professor @relation(fields: [professorId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
}

model ProfessorRating {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String   @db.ObjectId
  professorId String   @db.ObjectId
  rating      Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  professor Professor @relation(fields: [professorId], references: [id], onDelete: Cascade)

  @@unique([userId, professorId])
  @@index([professorId])
}

// ✅ NEW: Usage tracking
model UsageLog {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String   @db.ObjectId
  action    String // "email_generated", "profile_viewed", etc.
  metadata  Json?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
}
